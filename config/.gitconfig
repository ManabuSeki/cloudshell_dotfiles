[include]
  path = .gitconfig.local
[color]
  ui = true
[core]
  excludesfile = ~/.gitignore
  editor = vim
  filemode = true
[init]
  defaultBranch = main
[push]
	default = simple
[branch]
	autosetuprebase = always
[pull]
  rebase = true
[ghq]
  root = ~/src
[credential "https://github.com"]
  helper =
  helper = !~/bin/gh auth git-credential
